{
    "name": "loevgaard/dandomain-api",
    "type": "library",
    "description": "Dandomain API Wrapper",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk",
            "homepage": "http://www.loevgaard.dk"
        }
    ],
    "require": {
        "php": ">=7.0",
        "beberlei/assert": "^2.7.6",
        "php-http/client-common": "^1.7",
        "php-http/client-implementation": "^1.0",
        "php-http/discovery": "^1.0",
        "php-http/httplug": "^1.0",
        "php-http/message-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.0",
        "php-http/mock-client": "^1.0",
        "php-http/message": "^1.0",
        "phpunit/phpunit" : "~5.5||~6.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "files": ["src/functions_include.php"],
        "psr-4": {
            "Loevgaard\\Dandomain\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loevgaard\\Dandomain\\Api\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
